@page
@model LiquorSales.Web.Pages.CreateProductModel
@{
    Layout = "_Layout";
}

<h2>Add New Product</h2>

@if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
{
    <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<form method="post" enctype="multipart/form-data">
    <!-- Ensure file uploads work -->
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CompanyName"></label>
        <input asp-for="Product.CompanyName" class="form-control" />
        <span asp-validation-for="Product.CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Size"></label>
        <input asp-for="Product.Size" class="form-control" />
        <span asp-validation-for="Product.Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Categories (comma-separated)</label>
        <input asp-for="Category" class="form-control" value="@string.Join(", ", Model.Product.Category ?? new List<string>())" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.StockingQuantity"></label>
        <input asp-for="Product.StockingQuantity" type="number" class="form-control" />
        <span asp-validation-for="Product.StockingQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CostPrice"></label>
        <input asp-for="Product.CostPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Product.CostPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.SellingPrice"></label>
        <input asp-for="Product.SellingPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Product.SellingPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ExpiryDate"></label>
        <input asp-for="Product.ExpiryDate" type="date" class="form-control" />
        <span asp-validation-for="Product.ExpiryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageFile">Image File</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <input type="hidden" asp-for="Product.ImagePath" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Add Product</button>
</form>